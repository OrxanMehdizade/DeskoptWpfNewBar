<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="DownloadBar" Height="250" Width="400" Background="#06b025">
    <Grid>
        <Canvas>
            <Button Height="30" Width="60" Canvas.Left="22" Background="#06b025" Foreground="White" Canvas.Top="92" Content="-" Name="descending" Command="{Binding DescendingCommand}" Click="descending_Click_1"
                ></Button>
            <Button Height="30" Width="60" Canvas.Right="22"  Background="#06b025" Foreground="White" Canvas.Top="92" Content="+" Name="growing" Command="{Binding GrowingCommand}" Click="growing_Click_1"
                ></Button>
            <ProgressBar Height="30" Width="200" Canvas.Right="100" Canvas.Top="92" Name="Bar" HorizontalAlignment="Left" Canvas.Left="94" VerticalAlignment="Center" Value="{Binding ProgressValue}" />
        </Canvas>
    </Grid>
</Window>